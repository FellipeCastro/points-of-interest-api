{
    "name": "points-of-interest-api",
    "version": "1.0.0",
    "description": "API para cadastro e consulta de pontos de interesse",
    "main": "app.js",
    "type": "module",
    "scripts": {
        "test": "jest",
        "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config=jest.e2e.config.js",
        "dev": "node --watch server.js",
        "start": "node server.js",
        "test:db:up": "docker compose up -d db",
        "test:db:down": "docker compose down",

        "docker:dev": "docker compose up --build --remove-orphans app-dev",
        "docker:prod": "docker compose up -d --build --remove-orphans app",
        "docker:test": "docker compose up --build --abort-on-container-exit --exit-code-from test-runner test-runner",
        "docker:down": "docker compose down",
        "docker:clean": "docker compose down -v --remove-orphans"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "mysql2": "^3.14.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.1.0",
        "cross-env": "^10.1.0",
        "jest": "^30.2.0",
        "nock": "^14.0.10",
        "pg-mem": "^3.0.5",
        "supertest": "^7.1.4"
    }
}
